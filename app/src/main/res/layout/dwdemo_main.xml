<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color2" >

    <!-- Header -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layered_header"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/dwdemo2_content_description"
                android:src="@drawable/rfid_icon_s" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/dwdemo2_app_name"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/scannerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:gravity="right"
                android:text="S: UNKNOWN"
                android:textColor="@color/white2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/rfidStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RFID: UNKNOWN"
                android:textColor="@color/white2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/readerStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="10dp"
                android:text="RD: UNKNOWN"
                android:textColor="@color/white2"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Soft scan button -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/bg_layered_ssbutton"
        android:paddingBottom="15dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="15dp" >

        <ImageButton
            android:id="@+id/softscanbutton"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/scan_trigger"
            android:contentDescription="@string/dwdemo2_content_description"
            android:src="@drawable/ic_dw_cap_rfid" />
    </LinearLayout>

    <!-- results window -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginBottom="61dp"
        android:background="@drawable/bg_layered_textview"
        android:fillViewport="true"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/output_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:text="@string/dwdemo2_textview_text"
            android:textColor="?android:attr/textColorPrimaryInverse" />
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/linearLayoutActionBar"
        android:background="@drawable/bg_layered_spacer" >
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_below="@+id/scrollView1"
        android:background="@color/blue2"
        android:layout_alignParentLeft="true" />

    <!-- Action bar -->

    <LinearLayout
        android:id="@+id/linearLayoutActionBar"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_layered_actionbar"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/actionButton1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_margin="8dp"
            android:background="@color/bg_color1"
            android:contentDescription="@string/dwdemo2_content_description"
            android:src="@drawable/clear_icon"
            android:tag="lumin_off" />

        <ImageButton
            android:id="@+id/actionButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/bg_color1"
            android:contentDescription="@string/dwdemo2_content_description"
            android:tag="camera"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/actionButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/bg_color1"
            android:contentDescription="@string/dwdemo2_content_description"
            android:tag="decode_center"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/actionButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/bg_color1"
            android:contentDescription="@string/dwdemo2_content_description"
            android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark" />
    </LinearLayout>

</RelativeLayout>
